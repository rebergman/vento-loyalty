            function CopyToClipboard(id) {
                var r = document.createRange();
                r.selectNode(document.getElementById(id));
                window.getSelection().removeAllRanges();
                window.getSelection().addRange(r);
                document.execCommand('copy');
                window.getSelection().removeAllRanges();
                var referralCodeEl = document.getElementById(id);
                console.log(couponCode);
                referralCodeEl.innerHTML = 'Copied!';
                setTimeout(function() {
                  referralCodeEl.innerHTML = couponCode;
                }, 2000);
              }
          
            function handleCouponCodeResponse(response) {
              if (response.status === 200) {
                response.json().then(function(data) {
                  // Extract the coupon code from the response
                  couponCode = data.code;
                
                  // Update the confirmation message with the coupon code
                  var confirmationMsg = document.getElementById("confirmation-msg");
                  confirmationMsg.innerHTML = "<p>Your unique coupon code is:<br><br><span id='coupon-code'>" + couponCode + "</span></p><br><a class='copy-coupon' href='#'onclick=CopyToClipboard('coupon-code');return false;'>Copy Code</a><p>You will also receive an email containing the code for your records</p><button class='check-loyalty-button' onclick='hideConfirmationPopup();'>Back</button>";
                  confirmationMsg.style.display = "block";
                
                  // Show the confirmation popup
                  var confirmationPopup = document.getElementById("confirmation-popup");
                  confirmationPopup.style.display = "block";
                });
              } else {
                console.log("Error fetching coupon code: " + response.status);
              }
            }
