                function formatPhoneNumberSubmit(value) {
                  // Remove any non-numeric characters
                  value = value.replace(/[^0-9]/g, '');
                
                  // Add '1' to the beginning if necessary
                  if (value.length === 10) {
                    value = '1' + value;
                  }
                
                  // Format the phone number as +1XXXXXXXXXX
                  value = "+1" + value;
                  phoneNumber = value;
                  console.log(phoneNumber);
                
                  return value;
                }
                
                
                function showConfirmationPopup(rewardPoints) {
              // Set the rewardPoints variable to a global variable for later use
              window.rewardPoints = rewardPoints;
              console.log(phoneNumber);
              
              // Show the confirmation popup
              document.getElementById('confirmation-popup').style.display = 'block';
