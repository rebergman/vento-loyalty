            function formatPhoneNumberDisplay(value) {
                  // Remove any non-numeric characters
                  value = value.replace(/[^0-9]/g, '');
                
                  // Add '1' to the beginning if necessary
                  if (value.length === 10 && value[0] !== '1') {
                    value = '1' + value;
                  }
                
                  // Format the phone number as 1 (XXX) XXX-XXXX
                  if (value.length > 0) {
                    value = value.replace(/(\d{1})(\d{3})(\d{3})(\d{4})/, '1 ($2) $3-$4');
                  }
                
                  return value;
                }
