                // Submit form
                function submitForm(event) {
                  event.preventDefault();
                
                  // Get the phone number input field value
                  var phoneNumberInput = document.getElementById("phone");
                  var phoneNumber = phoneNumberInput.value;
                
                  // Format phone number for display
                  var formattedPhoneNumberDisplay = formatPhoneNumberDisplay(phoneNumber);
                
                  // Update the input field value with the formatted phone number for display
                  phoneNumberInput.value = formattedPhoneNumberDisplay;
                
                  // Format phone number for submission
                  var formattedPhoneNumberSubmit = formatPhoneNumberSubmit(phoneNumber);
                
                    // Get the loading GIF element
                    var loadingGif = document.getElementById("loading-gif");
        
                    // Show the loading GIF before sending the request
                    loadingGif.style.display = "block";
        
                    // Send a POST request to the Google Cloud Function with the phone number
                    var xhr = new XMLHttpRequest();
                    xhr.open("POST", "https://us-central1-naot-inventory.cloudfunctions.net/ventoloyalty-v3", true);
                    xhr.setRequestHeader('Content-Type', 'application/json');
                    xhr.onreadystatechange = function() {
                      if (this.readyState === XMLHttpRequest.DONE) {
                        // Hide the loading GIF after receiving the response
                        loadingGif.style.display = "none";
                        if (this.status === 200) {
                          // Parse the response data
                          var response = JSON.parse(xhr.responseText);                // Check if the response contains any data
                        if (Object.keys(response).length === 0 && response.constructor === Object) {
                          // Display the "Sign up now" button
                          document.getElementById("signup-button").style.display = "block";
                          update(0); // Update progress bar to 0
                        } else {
                          // Display the loyalty account information on the page
                          var loyaltyAccount = response;
                          var loyaltyAccountBalance = loyaltyAccount.loyalty_accounts[0].balance;
                          var loyaltyAccountMessage = "Loyalty Account Balance: " + loyaltyAccountBalance;
                          document.getElementById("loyalty-account-message").innerHTML = loyaltyAccountMessage;
                
                          // Calculate progress based on loyalty points
                          var currentActive = 0;
                          if (loyaltyAccountBalance >= 200) {
                            currentActive = 6;
                          } else if (loyaltyAccountBalance >= 150) {
                            currentActive = 5;
                          } else if (loyaltyAccountBalance >= 100) {
                            currentActive = 4;
                          } else if (loyaltyAccountBalance >= 50) {
                            currentActive = 3;
                          } else if (loyaltyAccountBalance >= 35) {
                            currentActive = 2;
                          } else if (loyaltyAccountBalance >= 15) {
                            currentActive = 1;
                          }
                          update(currentActive); // Update progress bar
                          console.log('current active circles: ', currentActive);
                
        
                        }
                          }
                        }
                        };
                
                xhr.send(JSON.stringify({
                phone: formattedPhoneNumberSubmit
                }));
                }
                
            function handleEmailInput() {
              var emailInput = document.getElementById("email");
              emailAddress = emailInput.value
              console.log(emailAddress)
              var confirmRewardBtn = document.getElementById("confirm-reward-btn");
              if (emailInput.checkValidity()) {
                confirmRewardBtn.disabled = false;
              } else {
                confirmRewardBtn.disabled = true;
              }
            }
            
            document.getElementById("email").addEventListener("input", handleEmailInput);
        
        
        
        
        
        
          function update(currentActive) {
            console.log('currentActive: ', currentActive);
            stepRectangles.forEach((rectangle, i) => {
                console.log('i = ', i);
              if (i <= currentActive - 1) {
                rectangle.style.opacity = "1";
                rectangle.style.backgroundColor = "#d1b48d";

              } else {
                rectangle.style.opacity = "0.5";
                rectangle.style.backgroundColor = "#d6d6d6";
              }
            });
            stepredeembtn.forEach((redeembtn, i) => {
              if (i <= currentActive - 1) {
                redeembtn.style.opacity = "1";
              } else {
                redeembtn.style.opacity = "0";
              }
            });
            stepCircles.forEach((circle, i) => {
              if (i < currentActive) {
                circle.classList.add("active");
              } else {
                circle.classList.remove("active");
              }
        
              const h3List = circle.querySelectorAll("h3");
              if (i < currentActive) {
                h3List.forEach((h3) => {
                  h3.style.color = "#fff";
                });
              } else {
                h3List.forEach((h3) => {
                  h3.style.color = "";
                });
              }
            });
        
            const activeCircles = document.querySelectorAll(".active");
          }    
