            function redeemReward() {
              var loadingGif2 = document.getElementById("loading-gif2");
              var confirmationWording = document.getElementById("confirmation-wording")
              confirmationWording.style.display ="none"
              loadingGif2.style.display = "block";
                
              // Send a request with the customer's phone number and reward point value
              fetch('https://us-central1-naot-inventory.cloudfunctions.net/ventoRedeemOnline', {
                method: 'POST',
                body: JSON.stringify({
                  phone: phoneNumber,
                  email: emailAddress,
                  points: window.rewardPoints // Use the global rewardPoints variable
                }),
                headers: {
                  'Content-Type': 'application/json'
                }
              })
              .then(response => {
                // Handle the response from the server here
                if (response.status === 200) {
                    loadingGif2.style.display = "none";
        
                    handleCouponCodeResponse(response);
                } else {
                  console.log("Error redeeming reward: " + response.status);
                }
              })
              .catch(error => {
                // Handle the error here
                console.error('Error sending redemption request', error);
              });
            }
        
